{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "types": ["styled-components-react-native"],
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@theme/*": [
        "./src/theme/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@screens/*": [
        "./src/screens/*"
      ],
      "@storage/*": [
        "./src/storage/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    }
  },
  "include": ["src", "node_modules/@types", "src/**/*/*.d.ts"]
}